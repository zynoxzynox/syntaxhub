-- Rainbow function for animating text color
local function rainbow(Text)
    local add = 5 -- Speed of color transition
    while true do
        for k = 0, 255, add do
            Text.TextColor3 = Color3.new(k / 255, 0, 0) -- Red to Yellow
            task.wait()
        end
        for k = 0, 255, add do
            Text.TextColor3 = Color3.new(1, k / 255, 0) -- Yellow to Green
            task.wait()
        end
        for k = 0, 255, add do
            Text.TextColor3 = Color3.new(1 - k / 255, 1, 0) -- Green to Cyan
            task.wait()
        end
        for k = 0, 255, add do
            Text.TextColor3 = Color3.new(0, 1, k / 255) -- Cyan to Blue
            task.wait()
        end
        for k = 0, 255, add do
            Text.TextColor3 = Color3.new(0, 1 - k / 255, 1) -- Blue to Magenta
            task.wait()
        end
        for k = 0, 255, add do
            Text.TextColor3 = Color3.new(k / 255, 0, 1) -- Magenta to Red
            task.wait()
        end
    end
end

-- Create the ScreenGui and Frame
local array = Instance.new("ScreenGui", game:GetService("CoreGui"))
local arrayFrame = Instance.new("Frame", array)
arrayFrame.Size = UDim2.new(0.15, 0, 1, 0)
arrayFrame.Position = UDim2.new(0.85, 0, 0, 0)
arrayFrame.BackgroundTransparency = 1

-- Create UIGridLayout
local Grid = Instance.new("UIGridLayout", arrayFrame)
Grid.CellPadding = UDim2.new(0, 0, 0.005, 0)
Grid.SortOrder = Enum.SortOrder.LayoutOrder
Grid.CellSize = UDim2.new(1, 0, 0.03, 0)
Grid.HorizontalAlignment = "Right"

-- Arraylist module
local Arraylist = {}

-- Add function with tween animation
function Arraylist.Add(Name, Suffix)
    -- Create the TextLabel
    local Text = Instance.new("TextLabel", arrayFrame)
    local newName = Suffix and Name .. " {" .. Suffix .. "}" or Name

    Text.Name = Name
    Text.BackgroundTransparency = 1
    Text.Size = UDim2.new(1, 0, 1, 0)
    Text.Font = Font.new([[rbxasset://fonts/families/Inter.json]], Enum.FontWeight.Bold, Enum.FontStyle.Normal) -- Inter Bold
    Text.TextSize = 14
    Text.Text = newName
    Text.TextXAlignment = "Right"
    Text.TextColor3 = Color3.new(1, 1, 1) -- Start with white color
    Text.TextStrokeTransparency = 0

    -- Position the label outside the screen initially
    Text.Position = UDim2.new(1, 10, 0, 0)

    -- Tween the label into view
    local tweenInfo = TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
    local tween = game:GetService("TweenService"):Create(Text, tweenInfo, { Position = UDim2.new(0, 0, 0, 0) })
    tween:Play()

    -- Start the rainbow effect
    task.spawn(function()
        rainbow(Text)
    end)
end

-- Remove function with tween animation
function Arraylist.Remove(Name)
    local Text = arrayFrame:FindFirstChild(Name)
    if not Text then return end

    -- Tween the label out of view
    local tweenInfo = TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.In)
    local tween = game:GetService("TweenService"):Create(Text, tweenInfo, { Position = UDim2.new(1, 10, 0, 0) })
    tween.Completed:Wait()

    -- Destroy the label after the tween completes
    Text:Destroy()
end

return Arraylist
